<div class="create-page">
    <form {{action 'save' model on='submit'}}>
        <label for="menu-item">Menu Item:</label>
        {{input id="menu-item" type="text" value=model.menuItem}}

        <label for="menu-description">Description:</label>
        {{textarea id="menu-description" type="text" value=model.description}}

        <label for="menu-price">Price:</label>
        {{input id="menu-price" type="text" value=model.price}}

        <label for="menu-category">Category:</label>
        {{input id="menu-category" type="text" value=model.category}}
        <button>Submit Item to Menu</button>
    </form>
</div>
