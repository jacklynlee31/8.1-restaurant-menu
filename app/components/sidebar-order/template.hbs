<div class="admin">
    {{#link-to 'back.login'}}Login as Administrator{{/link-to}}
</div>

<div class="sidebar-menu">
    <span>Your Current Order:</span>
    <ul class="front-order">
        {{#each item.orderedItems as |item|}}
        <li>{{item.menuItem}} - {{item.price}}</li>
        {{/each}}
    </ul>
      {{#if item.orderedItems.length}}
    {{#unless loading}}
      {{md-btn text='Order Up!'
        action='addOrder'
        class='o-button'}}
    {{else}}
      {{md-loader}}
    {{/unless}}
  {{/if}}
</div>
